rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rules for the users collection
    match /users/{user_id} {
      // Allow read access to authenticated users
      allow read: if request.auth != null;
      
      // Allow create operation if the user is authenticated and the userId matches the request.auth.uid
      allow create: if request.auth != null && request.resource.data.user_id == request.auth.uid;
      
      // Allow update operation if the user is authenticated and the userId matches the request.auth.uid
      allow update: if request.auth != null && resource.data.user_id == request.auth.uid;
      
      // Allow delete operation if the user is authenticated and the userId matches the request.auth.uid
      allow delete: if request.auth != null && resource.data.user_id == request.auth.uid;
    }
    
    
  }
}
